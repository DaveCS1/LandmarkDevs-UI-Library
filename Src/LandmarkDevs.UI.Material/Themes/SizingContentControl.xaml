<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:controls="clr-namespace:LandmarkDevs.UI.Material.Controls">

    <Style TargetType="{x:Type controls:SizingContentControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:SizingContentControl}">
                    <Grid x:Name="PART_LayoutRoot">
                        <md:Card x:Name="PART_ContentCard"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            MinWidth="0"
                            MinHeight="0">
                            <ContentPresenter Content="{TemplateBinding Content}" Margin="{TemplateBinding Margin}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </md:Card>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>